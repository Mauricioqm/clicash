<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registro">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/logotop" />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:text="Crea tu cuenta"
        android:textSize="36sp" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_below="@id/titulo"
        android:layout_centerHorizontal="true"
        android:hint="Correo electrónico"/>

    <EditText
        android:id="@+id/contrasena"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/correo"
        android:layout_centerHorizontal="true"
        android:hint="Contraseña"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/contrasena2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@id/contrasena"
        android:layout_centerHorizontal="true"
        android:hint="Confirme contraseña"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/contrasena2"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#A9AAAD"
        android:clickable="false"
        android:text="Continuar>" />

    <TextView
        android:id="@+id/aviso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aviso de pridacidad"
        android:layout_below="@id/btnContinuar"
        android:layout_centerHorizontal="true"
        android:textColor="#FD9437"/>

    <CheckBox
        android:id="@+id/checkInput"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/aviso"
        android:layout_marginTop="140dp"
        android:buttonTint="#FD9437"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:text="Para crear tu cuenta debes aceptar los  Términos y Condiciones así como estar de  acuerdo con nuestro Aviso de Privacidad." />

    <TextView
        android:id="@+id/terminos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkInput"
        android:layout_centerHorizontal="true"
        android:gravity="bottom"
        android:text="Términos y condiciones"
        android:layout_marginTop="5dp"
        android:textColor="#FD9437" />
</RelativeLayout>