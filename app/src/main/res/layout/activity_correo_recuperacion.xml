<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".correoRecuperacion">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="250dp"
        android:layout_height="350dp"
        app:srcCompat="@mipmap/icon"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/infoRecuperacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:padding="40dp"
        android:text="Perfecto, se te ha enviado\n un correo electrÃ³nico para\n verificar tu cuenta"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnIngresarHome"
        android:layout_width="350dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoRecuperacion"
        android:layout_centerHorizontal="true"
        android:text="INGRESA"
        android:backgroundTint="#FD9437"
        android:textColor="#ffffff"/>

</RelativeLayout>