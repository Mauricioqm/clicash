<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".misTarjetas">


    <ImageView
        android:id="@+id/mistarjetas"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/logotop" />

    <LinearLayout
        android:id="@+id/tarjeta"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/mistarjetas"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/banco"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_mis_tarjetas_naranja" />

        <EditText
            android:id="@+id/nuemroTarjeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />

        <ImageView
            android:id="@+id/editarTarjeta"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_editar" />

        <ImageView
            android:id="@+id/cancelar"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_cancel" />

    </LinearLayout>

    <TextView
        android:id="@+id/nombreBanco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tarjeta"
        android:layout_centerHorizontal="true"
        android:text="BancomerOro"
        android:textColor="#000"
        android:textSize="18sp" />


    <Button
        android:id="@+id/button"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreBanco"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="45dp"
        android:layout_marginTop="340dp"
        android:background="#FD9437"
        android:text="AGREGAR OTRA TARJETA"
        android:textColor="#ffffff" />
</RelativeLayout>